<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Dashboard - Brand</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap2.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i">
    <link rel="stylesheet" href="~/fonts/fontawesome-all.min.css">
</head>

<body id="page-top">
    <div id="wrapper">
        <nav class="navbar navbar-dark align-items-start sidebar sidebar-dark accordion bg-gradient-primary p-0" style="background-color: #a7a7a7; color: rgb(188, 248, 179);">
            <div class="container-fluid d-flex flex-column p-0">
                <a class="navbar-brand d-flex justify-content-center align-items-center sidebar-brand m-0">
                    <div class="sidebar-brand-icon rotate-n-15"></div>
                    <div class="sidebar-brand-text mx-3">
                        <span>Panel<br>Administratora</span>
                    </div>
                </a>
                <hr class="sidebar-divider my-0">
                <ul class="nav navbar-nav text-light" id="accordionSidebar">
                    <li class="nav-item nav-link js-scroll-trigger" role="presentation">
                        <a class="nav-link js-scroll-trigger" asp-controller="Admin" asp-action="Index">
                            <i class="fas fa-tachometer-alt"></i><span>Statystyki</span>
                        </a>
                    </li>
                    <li class="nav-item nav-link js-scroll-trigger" role="presentation">
                        <a class="nav-link js-scroll-trigger" asp-controller="Admin" asp-action="UserList">
                            <i class="fas fa-user"></i><span>Użytkownicy</span>
                        </a>
                    </li>
                    <li class="nav-item nav-link js-scroll-trigger" role="presentation">
                        <a class="nav-link js-scroll-trigger" asp-controller="Room" asp-action="AdminList">
                            <i class="fas fa-desktop"></i><span>Sale konferencyjne</span>
                        </a>
                    </li>
                    <li class="nav-item nav-link js-scroll-trigger" role="presentation">
                        <a class="nav-link js-scroll-trigger" asp-controller="Booking" asp-action="AdminList">
                            <i class="fas fa-table"></i><span>Rezerwacje</span>
                        </a>
                    </li>
                    <li class="nav-item nav-link js-scroll-trigger" role="presentation">
                        <a class="nav-link js-scroll-trigger" asp-controller="Home" asp-action="Index">
                            <i class="far fa-sticky-note"></i><span>Strona główna</span>
                        </a>
                    </li>
                    <li class="nav-item nav-link js-scroll-trigger" role="presentation">
                        <a class="nav-link js-scroll-trigger" asp-controller="Account" asp-action="LogOut">
                            <i class="fas fa-power-off"></i><span>Wyloguj</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="d-flex flex-column" id="content-wrapper">

            <div id="content">
                <nav class="navbar navbar-light navbar-expand bg-white shadow mb-4 topbar static-top">
                    <div class="container-fluid">
                        <button class="btn btn-link d-md-none rounded-circle mr-3" id="sidebarToggleTop" type="button">
                            <i class="fas fa-bars"></i>
                        </button>
                        <h3 class="text-dark mb-0">
                            <div id="time"></div>
                        </h3>
                        <form class="form-inline d-none d-sm-inline-block mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                            <div class="input-group">
                                <div class="input-group-append"></div>
                            </div>
                        </form>
                    </div>
                </nav>

                @section Scripts
            {
                    <script type="text/javascript">
                        function checkTime(i) {
                            if (i < 10) {
                                i = "0" + i;
                            }
                            return i;
                        }

                        function startTime() {
                            var today = new Date();
                            var h = today.getHours();
                            var m = today.getMinutes();
                            var s = today.getSeconds();
                            m = checkTime(m);
                            s = checkTime(s);
                            document.getElementById('time').innerHTML = h + ":" + m + ":" + s;
                            t = setTimeout(function() {
                                startTime()
                            }, 500);
                        }

                        startTime();
                    </script>
                }

                @RenderBody()
            </div>
            <footer class="bg-white sticky-footer"></footer>
        </div>

        <a class="border rounded d-inline scroll-to-top" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>
    </div>
    <script src="~/js/jquery.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/js/chart.min.js"></script>
    <script src="~/js/bs-init.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.js"></script>
    <script src="~/js/theme.js"></script>
@RenderSection("Scripts", required: false)
</body>

</html>