@{
    ViewData["Title"] = "Home Page";
}

@Html.Partial("_LayoutUserHeader")
<header class="masthead" style="background-image: url('img/Warszawa.jpg');">
    <div class="intro-body">
        <div class="container">
            <div class="row" style="color: white">
                <div class="col-lg-8 mx-auto">
                    <h1 class="brand-heading">WITAJ!<br></h1>
                    <p class="intro-text">
                        <strong>Zarezerwuj salę konferencyjną</strong>
                    </p>
                    <a class="btn btn-link btn-circle" role="button" href="#booking" style="color: rgb(248, 243, 243); filter: blur(0px) brightness(200%) contrast(200%) grayscale(100%); opacity: 1; font-size: 74px; width: 80px; height: 80px;">
                        <i class="fa fa-angle-double-down animated"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</header>

<section id="room" class="download-section content-section text-center" style="padding: 70px;">
    <h2 class="text-info" style="color: rgb(0, 0, 0);">Nasze Sale konferencyjne</h2>
    <section class="clean-block slider dark">
        <div class="container">
            <div class="block-heading">


                <p>W swojej ofercie posiadamy szeroki wybór sal konferenycyjnych</p>
                <h2 style="font-size: 18px;">
                    <a asp-controller="Room" asp-action="List">Wyświetl wszystkie</a>
                </h2>
            </div>
            <div class="carousel slide" data-ride="carousel" id="carousel-1">
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="w-100 d-block" src="~/img/room1.jpg" alt="Slide Image">
                    </div>
                    <div class="carousel-item">
                        <img class="w-100 d-block" src="~/img/room2.jpg" alt="Slide Image">
                    </div>
                    <div class="carousel-item">
                        <img class="w-100 d-block" src="~/img/room3.jpg" alt="Slide Image">
                    </div>
                </div>
                <div>
                    <a class="carousel-control-prev" href="#carousel-1" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carousel-1" role="button"
                       data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <ol class="carousel-indicators">
                    <li data-target="#carousel-1" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-1" data-slide-to="1"></li>
                    <li data-target="#carousel-1" data-slide-to="2"></li>
                </ol>
            </div>
        </div>
    </section>
</section>

<section id="booking" class="download-section content-section text-center">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <h2>Rezerwacje Sal konferencyjnych</h2>
                <p>
                    Sprawdz dostępność terminów klikając<br>
                    <a asp-controller="Booking" asp-action="Calendar">DOSTĘPNOŚĆ TERMINÓW</a>
                </p>
                <p>
                    Nowej rezerwacji możesz dokonać klikając<br>
                    <a asp-controller="Booking" asp-action="Add">NOWA REZERWACJA</a><br>
                </p>
                <p>
                    Edycji oraz wyświetlenia rezerwacji możesz dokonać klikając<br>
                    <a asp-controller="Booking" asp-action="List">ZARZĄDZANIE REZERWACJĄ</a><br>
                </p>
            </div>
        </div>
    </div>
</section>

<section id="login" class="download-section content-section text-center" style="background-image: url('img/login.jpg'); padding: 220;">
    <div class="container">
        <div class="col-lg-8 mx-auto">
            @if (User.Identity.IsAuthenticated)
            {
                <h1>Witaj</h1>
                <p> @User.Identity.Name.ToString()</p>
                <a class="btn btn-primary btn-lg btn-default" type="button" asp-area="" asp-controller="Account" asp-action="LogOut">Wyloguj</a>
            }
            else
            {
                <h1>Logowanie</h1>
                <p>Tylko zarejestrowani i zalogowani użytkownicy mogą korzystać z aplikajci</p>
                <a class="btn btn-primary btn-lg btn-default" type="button" asp-controller="Account" asp-action="Login">Logowanie / rejestracja</a>
            }
        </div>
    </div>
</section>

<section id="contact" class="download-section content-section text-center" style="padding: 250px;">
    <section class="clean-block slider dark"></section>
    <div class="container">
        <div class="row" style="margin: 20px;">
            <div class="col-lg-8 mx-auto">
                <h2>O Autorze</h2>
                <p>Aplikacja powstała jako projekt końcowy kursu&nbsp;<br><strong>.NET (C#) Developer: Web&nbsp;</strong>w szkole IT - CodersLab.<br>Autor: Seweryn Nowicki<br></p>
                <ul class="list-inline banner-social-buttons">
                    <li class="list-inline-item">
                        &nbsp;
                        <a href="https://www.linkedin.com/in/sewerynnowicki">
                            <button class="btn btn-primary btn-lg btn-default" type="button">
                                <i class="fa fa-linkedin-square"></i>
                                <span class="network-name">Linkedin</span>
                            </button>
                        </a>
                    </li>
                    <li class="list-inline-item">
                        &nbsp;
                        <a href="https://github.com/Chironexs">
                            <button class="btn btn-primary btn-lg btn-default" type="button">
                                <i class="fa fa-github"></i>
                                <span class="network-name">GitHub</span>
                            </button>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

<div class="map-clean"></div>
<footer>
    <div class="container text-center">
        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="Admin" asp-action="Index">Warszawa 2020</a>
        }
        else
        {
            <a asp-controller="Home" asp-action="Index">Warszawa 2020</a>
        }
    </div>
</footer>
<a class="border rounded d-inline scroll-to-top" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>